# ============================================
# Database Configuration (MariaDB/MySQL)
# ============================================
# Host where MariaDB/MySQL server is running
DB_HOST=localhost

# Port for database connection (default MySQL/MariaDB port)
DB_PORT=3306

# Database username (created during setup)
DB_USER=app_user

# Database password for the app_user
DB_PASSWORD=your_secure_password_here

# Database name to use for this application
DB_NAME=student_management

# ============================================
# JWT Configuration
# ============================================
# Secret key used to sign JWT tokens
# IMPORTANT: Change this to a secure random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Token expiration time
JWT_EXPIRE=7d

# ============================================
# Server Configuration
# ============================================
# Application server port
PORT=5000

# Environment mode (development, production, test)
NODE_ENV=development

CORS_ORIGIN=http://localhost:3000